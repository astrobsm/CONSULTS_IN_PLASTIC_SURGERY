{
  "version": 2,
  "framework": null,
  "installCommand": "cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/dist",
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python@4.5.0",
      "maxDuration": 60,
      "includeFiles": "backend/**/*.py",
      "excludeFiles": "{backend/venv/**,backend/__pycache__/**,backend/**/__pycache__/**,backend/*.db,frontend/**,node_modules/**,.git/**}"
    }
  }
}
